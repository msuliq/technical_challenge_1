<div class="jumbotron text-center">
    <h1 class="display-4">List of available flats</h1>
</div>
<% @flats.each do |flat| %>
    <table>
        <tr>
            <td>Flat name</td>
            <td><%= flat.name %></td>
        </tr>
        <tr>
            <td>Latitude</td>
            <td><%= flat.latitude %></td>
        </tr>
        <tr>
            <td>Longitude</td>
            <td><%= flat.longitude %></td>
        </tr>
         <tr>
            <td>Number of tenants</td>
            <td><%= flat.tenants.count %></td>
        </tr>
        <tr>
        <td><%= link_to 'Select This Flat', '#', class: 'btn btn-primary' %></td>
        <td><%= link_to 'Delete This Flat', flat_path(flat), 
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %></td>
        </tr>
    </table>
<% end %>
